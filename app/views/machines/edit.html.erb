<style>
  @media (max-width: 768px) {
    .grid-cols-2 {
      grid-template-columns: 1fr;
      margin-top: 20px; /* Add margin to move the grids downward */
    }
  }

  body {
    margin: 0;
    padding: 0;
    background: url('https://i.pinimg.com/564x/78/46/59/78465959c9d1d8fc5d54aa4ab72fbf9c.jpg') no-repeat center center fixed;
    background-size: cover;
  }

  @media (max-width: 480px) {
    .h-screen {
      height: auto;
      min-height: 100vh;
    }
    .grid-cols-2 {
      grid-template-columns: 1fr;
      margin-top: 20px; /* Add margin to move the grids downward */
    }
    .col-span-1 {
      text-align: center;
    }
  }
</style>

<div class="flex justify-center items-center h-screen">
  <div class="grid grid-cols-2 gap-7 mt-0 mb-20 w-3/4 lg:w-2/3 xl:w-1/2">

    <div class="col-span-1">
      <p class="text-5xl font-bold mt-6 text-white">Edit</p>
      <p class="text-5xl font-bold mt-2 text-white">This Machine</p>
      <hr class="mt-10 w-20 border-t-4 border-purple-300">
      <p class="text-1xl mt-6 font-bold text-white">Do you want to modify this machine?</p>
      <p class="text-1xl mt-2 font-bold text-white">Let's do it!</p>
    </div>

    <div class="col-span-1 flex flex-col justify-center items-center bg-gray-600 bg-opacity-50 text-white rounded-lg overflow-hidden">
      <h1 class="text-4xl font-bold mt-2 mb-4">Edit</h1>
      <%= render partial: "form", locals: {machine: @machine} %>
    </div>
    
  </div>
</div>
