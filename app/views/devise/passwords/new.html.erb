<div class="flex justify-center items-center h-screen">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-7 mt-0 mb-20 w-3/4 lg:w-2/3 xl:w-1/2">

    <div class="col-span-1">
      <p class="text-5xl mt-2 font-bold text-white"> Forgot </p>
      <p class="text-5xl mt-2 font-bold text-white">The Password </p>
      <hr class="mt-8 w-20 border-t-4 border-purple-300">
      <p class="text-1xl mt-4 font-bold text-white"> Oups, you forgot your password, don't worry, we will help you retrieve it</p>
    </div>

    <div class="col-span-1 flex flex-col justify-center  bg-gray-600 bg-opacity-50 text-white rounded-lg overflow-hidden">
      <h2 class="text-4xl m-auto w-fit mt-5 font-bold mb-4 ">New Password</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field text-gray-300 ml-5 mr-5">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 rounded-md bg-gray-800" %>
        </div>

        <div class="actions text-white">
         <%= f.submit "Send me reset password instructions", class: "bg-cyan-500 mt-8 mb-5 text-white px-5 ml-32 py-2 rounded-md" %>
       </div>
    <% end %>
    </div>
  </div>
</div>

